import os

#função sem retorno.
def logoSenai():
    os.system("cls || clear")
    print("=== SENAI ===")
    
    # Função com retorno.
    def somar(n1, n2):
        resultado = n1 + n2
        return resultado

    # Solicitando dados para o usuario.
    logoSenai()
    primeiroNumero = int(input("Digite o primeiro numero: "))
    segundoNumero = int(input("Digite o segundo numero: "))

    soma = somar(primeiroNumero, segundoNumero)

    # Exibindo dados para o usuario.
    print(f"Soma: {soma}")
